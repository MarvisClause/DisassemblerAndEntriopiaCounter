<UserControl x:Class="DisEn.Views.ResearchViews"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DisEn.Views" 
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp" xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <!-- Action buttons -->
            <RowDefinition Height="50"/>
            <!-- Information -->
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <!--List of comands section-->
            <ColumnDefinition Width="*"/>
            <!--Histogram section-->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Action buttons -->
        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Grid>
                <Grid.ColumnDefinitions>
                    <!--List of comands section-->
                    <ColumnDefinition Width="*"/>
                    <!--Histogram section-->
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Choose file to disassemble button -->
                <Button Grid.Column="1"
                                Margin="5"
                                Click="btnDisassembleFile_Click"                         
                                Content="Upload File"                            
                                FontSize="12"
                                FontFamily="Montserrat"
                                Cursor="Hand"
                                BorderThickness="0"
                                Foreground="White"
                                VerticalAlignment="Center">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" 
                                    Value="#773DFF"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Height="30"
                                                CornerRadius="5"
                                                Padding="5"
                                                Background="{TemplateBinding Background}">
                                            <ContentPresenter VerticalAlignment="Center"
                                                              HorizontalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" 
                                         Value="True">
                                    <Setter Property="Background" 
                                            Value="#836EFB"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <!-- Save cast button -->
                <Button x:Name="UpdateCastFileButton" Grid.Column="0"
                                Margin="5"
                                Click="btnUpdateCastFile_Click"                         
                                Content="Update Cast File"                            
                                FontSize="12"
                                FontFamily="Montserrat"
                                Cursor="Hand"
                                BorderThickness="0"
                                Foreground="White"
                                VerticalAlignment="Center">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" 
                                    Value="#FFA25CE8"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Height="30"
                                                Padding="5"
                                                CornerRadius="5"
                                                Background="{TemplateBinding Background}">
                                            <ContentPresenter VerticalAlignment="Center"
                                                              HorizontalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" 
                                         Value="True">
                                    <Setter Property="Background" 
                                            Value="#836EFB"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </StackPanel>

        <!--List of comands section-->
        <Border CornerRadius="10"
             Grid.Row="1"
             Grid.Column="0"
             Margin="0,0,5,0">

            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="{StaticResource secondaryBackColor1}" Offset="0"/>
                    <GradientStop Color="{StaticResource secondaryBackColor2}" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            
            <!--File info section-->
            <UniformGrid x:Name="FileInfoUniformGrid" Rows="2" Margin="5">

                <!-- Current file -->
                <Grid>
                    <Grid.RowDefinitions>
                        <!--Text info about file-->
                        <RowDefinition Height="*"/>
                        <!--Table with file commands analysis-->
                        <RowDefinition Height="3*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">

                        <Grid.RowDefinitions>
                            <!--Name of file-->
                            <RowDefinition Height="*"/>
                            <!--Total amount of commands-->
                            <RowDefinition Height="*"/>
                            <!--Size of file:-->
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!--Name of file-->
                        <StackPanel Orientation="Horizontal"
                                                Grid.Row="0">
                            <!--Title-->
                            <TextBlock Text="Current file : "
                                                   Foreground="{StaticResource titleColor2}"
                                                   FontSize="16"
                                                   FontFamily="Montserrat"
                                                   FontWeight="Medium"
                                                   VerticalAlignment="Center"
                                                   Margin="10,0,0,0"/>
                            <!--Name-->
                            <TextBlock x:Name="CurrentFileName"
                                                   Foreground="{StaticResource titleColor2}"
                                                   FontSize="16"
                                                   FontFamily="Montserrat"
                                                   FontWeight="Medium"
                                                   VerticalAlignment="Center"
                                                   Margin="10,0,0,0"/>
                        </StackPanel>

                        <!--Total amount of commands-->
                        <StackPanel Orientation="Horizontal"
                                                Grid.Row="1">
                            <!--Title-->
                            <TextBlock Text="Total Amount Of Commands : "
                                                   Foreground="{StaticResource titleColor2}"
                                                   FontSize="16"
                                                   FontFamily="Montserrat"
                                                   FontWeight="Medium"
                                                   VerticalAlignment="Center"
                                                   Margin="10,0,0,0"/>
                            <!--Name-->
                            <TextBlock x:Name="CurrentFileTotalAmountOfCommands"
                                                   Foreground="{StaticResource titleColor2}"
                                                   FontSize="16"
                                                   FontFamily="Montserrat"
                                                   FontWeight="Medium"
                                                   VerticalAlignment="Center"
                                                   Margin="10,0,0,0"/>
                        </StackPanel>

                        <!--Size Of File-->
                        <StackPanel Orientation="Horizontal"
                                                Grid.Row="2">
                            <!--Title-->
                            <TextBlock Text="Size of file : "
                                                   Foreground="{StaticResource titleColor2}"
                                                   FontSize="16"
                                                   FontFamily="Montserrat"
                                                   FontWeight="Medium"
                                                   VerticalAlignment="Center"
                                                   Margin="10,0,0,0"/>
                            <!--Name-->
                            <TextBlock x:Name="CurrentFileSize"
                                                   Foreground="{StaticResource titleColor2}"
                                                   FontSize="16"
                                                   FontFamily="Montserrat"
                                                   FontWeight="Medium"
                                                   VerticalAlignment="Center"
                                                   Margin="10,0,0,0"/>
                        </StackPanel>
                    </Grid>

                    <DataGrid x:Name="CurrentDisassemblerDataGrid" 
                                              Grid.Row="1"
                                              FontSize="15" 
                                              Margin="5"
                                              AutoGenerateColumns="False" 
                                              HorizontalGridLinesBrush="DarkGray"
                                              RowBackground="LightGray" 
                                              AlternatingRowBackground="White"
                                              IsReadOnly="True" 
                                              VerticalScrollBarVisibility="Auto" 
                                              FontFamily="Montserrat SemiBold"
                                              Background="#FFF6F7F9" 
                                              BorderBrush="#FFF6F7F9"
                                              FontWeight="Medium"
                                              Foreground="Black">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding Path=Name}" Header="Command" Width="*" FontFamily="Montserrat"/>
                            <DataGridTextColumn Binding="{Binding Path=Count}" Header="Quantity" Width="*" FontFamily="Montserrat"/>
                            <DataGridTextColumn Binding="{Binding Path=Entropy}" Header="Entropy" Width="1.5*" FontFamily="Montserrat"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>

                <!--Cast File-->
                <Grid x:Name="CastFileInfoGrid" Grid.Row="1">
                    <Grid.RowDefinitions>
                        <!--Text info about file-->
                        <RowDefinition Height="*"/>
                        <!--Table with file commands analysis-->
                        <RowDefinition Height="3*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">

                        <Grid.RowDefinitions>
                            <!--Name of file-->
                            <RowDefinition Height="*"/>
                            <!--Total amount of commands-->
                            <RowDefinition Height="*"/>
                            <!--Size of file:-->
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!--Name of file-->
                        <StackPanel Orientation="Horizontal"
                                            Grid.Row="0">
                            <!--Title-->
                            <TextBlock Text="Cast file : "
                                               Foreground="{StaticResource titleColor2}"
                                               FontSize="16"
                                               FontFamily="Montserrat"
                                               FontWeight="Medium"
                                               VerticalAlignment="Center"
                                               Margin="10,0,0,0"/>
                            <!--Name-->
                            <TextBlock x:Name="CastFileName"
                                               Foreground="{StaticResource titleColor2}"
                                               FontSize="16"
                                               FontFamily="Montserrat"
                                               FontWeight="Medium"
                                               VerticalAlignment="Center"
                                               Margin="10,0,0,0"/>
                        </StackPanel>

                        <!--Total amount of commands-->
                        <StackPanel Orientation="Horizontal"
                                            Grid.Row="1">
                            <!--Title-->
                            <TextBlock Text="TotalAmountOfCommands : "
                                               Foreground="{StaticResource titleColor2}"
                                               FontSize="16"
                                               FontFamily="Montserrat"
                                               FontWeight="Medium"
                                               VerticalAlignment="Center"
                                               Margin="10,0,0,0"/>
                            <!--Name-->
                            <TextBlock x:Name="CastFileTotalAmountOfCommands"
                                               Foreground="{StaticResource titleColor2}"
                                               FontSize="16"
                                               FontFamily="Montserrat"
                                               FontWeight="Medium"
                                               VerticalAlignment="Center"
                                               Margin="10,0,0,0"/>
                        </StackPanel>

                        <!--Size Of File-->
                        <StackPanel Orientation="Horizontal"
                                            Grid.Row="2">
                            <!--Title-->
                            <TextBlock Text="Size of file : "
                                               Foreground="{StaticResource titleColor2}"
                                               FontSize="16"
                                               FontFamily="Montserrat"
                                               FontWeight="Medium"
                                               VerticalAlignment="Center"
                                               Margin="10,0,0,0"/>
                            <!--Name-->
                            <TextBlock x:Name="CastFileSize"
                                               Foreground="{StaticResource titleColor2}"
                                               FontSize="16"
                                               FontFamily="Montserrat"
                                               FontWeight="Medium"
                                               VerticalAlignment="Center"
                                               Margin="10,0,0,0"/>
                        </StackPanel>
                    </Grid>

                    <DataGrid x:Name="SavedDisassemblerDataGrid" 
                                          Grid.Row="1"    
                                          FontSize="15" 
                                          Margin="5"
                                          AutoGenerateColumns="False" 
                                          HorizontalGridLinesBrush="DarkGray"
                                          RowBackground="LightGray" 
                                          AlternatingRowBackground="White"
                                          IsReadOnly="True" 
                                          VerticalScrollBarVisibility="Auto" 
                                          FontFamily="Montserrat"
                                          FontWeight="Medium"
                                          Background="#FFF6F7F9" 
                                          BorderBrush="#FFF6F7F9" 
                                          Foreground="Black">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding Path=Name}" Header="Command" Width="*" FontFamily="Montserrat"/>
                            <DataGridTextColumn Binding="{Binding Path=Count}" Header="Quantity" Width="*" FontFamily="Montserrat"/>
                            <DataGridTextColumn Binding="{Binding Path=Entropy}" Header="Entropy" Width="1.5*" FontFamily="Montserrat"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </UniformGrid>
        </Border>
        
        <!--Histogram section-->
        <Grid Grid.Row="1"
            Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!--Pie Histogram section or current file column histogram -->
            <Border CornerRadius="10"
             Grid.Row="0"
             Margin="5,0,0,5">

                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="{StaticResource secondaryBackColor1}" Offset="0"/>
                        <GradientStop Color="{StaticResource secondaryBackColor2}" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <!--Expend Button-->
                        <RowDefinition Height="25"/>
                        <!--Pie Histogram-->
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!--Expand Button-->
                    <StackPanel Grid.Row="0">
                        <Button x:Name="btnPieExpend"
                                Style="{DynamicResource controlButton}"
                                Tag="{StaticResource color2}"
                                Click="btnPieExpend_Click"
                                HorizontalAlignment="Right">
                            <fa:IconImage Icon="maximize" 
                                          Style="{StaticResource controlButtonIcon}"/>
                        </Button>

                    </StackPanel>

                    <!--Histogram top grid-->
                    <Grid x:Name="GridTopHistogram" Grid.Row="1">
                    
                        <!--Current file pie histogram-->
                        <lvc:PieChart x:Name="CurrentFileTopPieHistogram" Foreground="{StaticResource titleColor2}" LegendLocation="Right">
                        <lvc:PieChart.DataTooltip>
                            <lvc:DefaultTooltip Foreground="Black"/>
                        </lvc:PieChart.DataTooltip>
                    </lvc:PieChart>

                        <!--Current file column histogram-->
                        <lvc:CartesianChart x:Name="CurrentFileTopColumnHistogram" Foreground="{StaticResource titleColor2}" LegendLocation="Right">
                            <lvc:CartesianChart.AxisX>
                                <lvc:Axis LabelsRotation="13" Labels=""/>
                            </lvc:CartesianChart.AxisX>

                            <lvc:CartesianChart.DataTooltip>
                                <lvc:DefaultTooltip Foreground="Black"/>
                            </lvc:CartesianChart.DataTooltip>
                        </lvc:CartesianChart>
                    </Grid>
                </Grid>
            </Border>

            <!--Colum Histogram section-->
            <Border CornerRadius="10"
                 Grid.Row="1"
                 Margin="5,5,0,0">

                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="{StaticResource secondaryBackColor1}" Offset="0"/>
                        <GradientStop Color="{StaticResource secondaryBackColor2}" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <!--Expend Button-->
                        <RowDefinition Height="25"/>
                        <!--Colum Histogram-->
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!--Expand Button-->
                    <StackPanel Grid.Row="0">
                        <Button x:Name="btnColumExpend"
                                Style="{DynamicResource controlButton}"
                                Tag="{StaticResource color2}"
                                Click="btnColumExpend_Click"
                                HorizontalAlignment="Right">
                            <fa:IconImage Icon="maximize" 
                  Style="{StaticResource controlButtonIcon}"/>
                        </Button>
                    </StackPanel>

                    <!--Histogram bottom grid-->
                    <Grid x:Name="GridBottomHistogram" Grid.Row="1">

                        <!--Current file column histogram-->
                        <lvc:CartesianChart x:Name="CurrentFileBottomColumnHistogram" Foreground="{StaticResource titleColor2}" LegendLocation="Right">
                            <lvc:CartesianChart.AxisX>
                                <lvc:Axis LabelsRotation="13" Labels=""/>
                            </lvc:CartesianChart.AxisX>

                            <lvc:CartesianChart.DataTooltip>
                                <lvc:DefaultTooltip Foreground="Black"/>
                            </lvc:CartesianChart.DataTooltip>
                        </lvc:CartesianChart>

                        <!--Cast file column histogram-->
                        <lvc:CartesianChart x:Name="CastFileBottomColumnHistogram" Foreground="{StaticResource titleColor2}" LegendLocation="Right">
                            <lvc:CartesianChart.AxisX>
                                <lvc:Axis LabelsRotation="13" Labels=""/>
                            </lvc:CartesianChart.AxisX>

                            <lvc:CartesianChart.DataTooltip>
                                <lvc:DefaultTooltip Foreground="Black"/>
                            </lvc:CartesianChart.DataTooltip>
                        </lvc:CartesianChart>
                        
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
