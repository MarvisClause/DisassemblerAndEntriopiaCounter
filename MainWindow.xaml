<Window x:Class="DisEn.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DisEn"
        mc:Ignorable="d"
        Title="DisEn" Height="800" Width="1226" FontFamily="Times New Roman" WindowStyle="ThreeDBorderWindow">
    <Grid Margin="10,0,10,0">
        <!--Rows-->
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!--Columns-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!--Button for file opening-->
        <Button Name="btnOpenFile" Grid.Column="0" Click="btnOpenFile_Click" 
                HorizontalAlignment="Center" VerticalAlignment="Center"
                FontSize="36"  FontFamily="Segoe UI Variable Small Semibold">Open file</Button>
        <!--Scroll view-->
        <ScrollViewer Grid.Column="1">
            <!--Disassemble info-->
            <TextBlock  Name="DisassemblerBox" Grid.Column="2" TextWrapping="Wrap"
                        TextAlignment="Left" Text="Entropy" Margin="0,10,0,10"
                        FontFamily="Cambria" FontSize="20"/>
        </ScrollViewer>
    </Grid>
</Window>